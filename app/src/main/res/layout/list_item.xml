<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:alpha=".6"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/iconImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignEnd="@+id/degHigh"
                android:layout_below="@+id/degHigh"
                android:layout_marginEnd="15dp" />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/date"
                android:layout_alignStart="@+id/date"
                android:text="Monday"
                android:textColor="#fff"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/date"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_above="@+id/degLow"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp"
                android:text="1/14/90"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/degHigh"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/day"
                android:layout_alignBottom="@+id/day"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="22dp"
                android:text="68"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/degLow"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/description"
                android:layout_alignStart="@+id/degHigh"
                android:text="48"
                android:textColor="#fff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/description"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/date"
                android:text="description"
                android:textColor="#fff"
                android:textSize="24sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>